{
  "name": "acme",
  "version": "0.0.1",
  "description": "Web app skeleton implementation, with authentication, users handling and common web app facilities",
  "author": "marcolino",
  "license": "ISC",
  "engines": {
    "node": "18.x",
    "npm": "9.x",
    "yarn": "4.x"
  },
  "main": "server.js",
  "scripts": {
    "start-dev": "nodemon --ignore client/ -w '.' -w server.js",
    "start-dev-reloading": "nodemon --ignore client/ -w '.' -w .env -x 'node server.js || touch server.js'",
    "start": "node server.js",
    "test": "nyc --reporter=html mocha --exit --timeout 10000 --slow 150 --recursive test | tee test/log/last.log; scripts/test2badge",
    "coverage": "xdg-open http://localhost:5000/coverage/",
    "i18n": "i18next 'src/**/*.{js,ejs}' --config 'i18next-parser.config.js' --silent",
    "i18n-check": "grep __STRING_NOT_TRANSLATED__ --quiet src/locales/*/translation.json && ( echo 'Some texts must be translated!'; false ) || true",
    "deps-check": "npx unimported",
    "deadfiles-check": "npx deadfile ./server.js --dir src/",
    "problems-check": "npx eslint server.js src/",
    "docker-build-dev": "rm -f client/build/index-injected.html; NODE_ENV=$(grep NODE_ENV .env.dev | cut -d '=' -f2) docker build -t acmeserver:latest .",
    "docker-run-dev": "docker run --network='host' --env-file .env.dev acmeserver",
    "docker-build": "rm -f client/build/index-injected.html; NODE_ENV=$(grep NODE_ENV .env | cut -d '=' -f2) docker build -t acmeserver:latest .",
    "docker-run": "docker run --network='host' --env-file .env acmeserver",
    "fly-upgrade": "fly version upgrade",
    "fly-import-secrets": "cat .env | fly secrets import",
    "fly-deploy": "rm -f client/build/index-injected.html; NODE_ENV=$(grep NODE_ENV .env | cut -d '=' -f2) fly deploy",
    "fly-logs": "fly logs"
  },
  "keywords": [
    "node.js",
    "react.js",
    "express",
    "jwt",
    "authentication",
    "authorization",
    "mongodb"
  ],
  "dependencies": {
    "@logtail/node": "^0.5.0",
    "@logtail/winston": "^0.5.0",
    "bcryptjs": "^2.4.3",
    "codice-fiscale-js": "^2.3.18",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "ejs": "^3.1.10",
    "email-validator": "^2.0.4",
    "express": "^4.17.1",
    "i18next": "^22.4.14",
    "i18next-fs-backend": "^2.3.2",
    "i18next-http-middleware": "^3.2.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.13.15",
    "morgan": "^1.10.0",
    "sib-api-v3-sdk": "^8.5.0",
    "stripe": "^8.214.0",
    "winston": "^3.7.2",
    "winston-syslog": "^2.5.0"
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "chai-spies": "^1.0.0",
    "globals": "^15.9.0",
    "i18next-parser": "9.0.2",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0"
  },
  "packageManager": "yarn@4.4.1",
  "dependenciesMetadata": {
    "unplugged": []
  }
}
